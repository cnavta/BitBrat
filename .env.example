# .env.example
# BitBrat Platform - Environment Configuration Template
# Copy this file to .env.local for local development.

# --- Global Settings ---
SERVICE_NAME=bitbrat
LOG_LEVEL=info # debug, info, warn, error
PORT=3000

# --- Message Bus (NATS/PubSub) ---
MESSAGE_BUS_DRIVER=nats # nats (local), pubsub (cloud)
NATS_URL=nats://localhost:4222
BUS_PREFIX=bb.
MESSAGE_BUS_DISABLE_SUBSCRIBE=0 # Set to 1 to disable subscriptions

# --- Google Cloud / Firebase ---
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GCLOUD_PROJECT=your-gcp-project-id
# Path to your Google Application Credentials JSON file.
# For local dev, this is typically an absolute path on your host machine.
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# --- Firestore (Local Emulator) ---
FIRESTORE_ENABLED=true
FIRESTORE_EMULATOR_HOST=localhost:8080

# --- OpenAI ---
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT_MS=60000
OPENAI_MAX_RETRIES=3

# --- Twitch Integration ---
TWITCH_ENABLED=true
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
TWITCH_BOT_USERNAME=your-bot-username
TWITCH_CHANNELS=channel1,channel2
TWITCH_OAUTH_SCOPES=chat:read,chat:edit,channel:read:subscriptions
# Optional: Path to store bot tokens in Firestore
TOKEN_DOC_PATH=oauth/twitch/bot
BROADCASTER_TOKEN_DOC_PATH=oauth/twitch/broadcaster

# --- Discord Integration ---
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_CHANNELS=channel-id-1,channel-id-2

# --- Twilio Integration ---
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret
TWILIO_CHAT_SERVICE_SID=your-twilio-chat-service-sid
TWILIO_IDENTITY=your-bot-identity

# --- MCP (Model Context Protocol) ---
MCP_AUTH_TOKEN=your-mcp-auth-token

# --- OBS Integration ---
OBS_WEBSOCKET_URL=ws://localhost:4455
OBS_WEBSOCKET_PASSWORD=your-obs-password
OBS_WEBSOCKET_SELF_SIGNED=false

# --- Command Processor ---
COMMAND_SIGIL=!
ALLOWED_SIGILS=!,?
COMMANDS_COLLECTION=commands
