# .env.example
# BitBrat Platform - Environment Configuration Template
# Copy this file to .secure.local for local development.
# .secure.local is used by merge-env.js to generate .env.local

# REQUIRED: Google Application Credentials (JSON key file)
# This MUST be an absolute path on your host machine.
# Example: /Users/username/keys/bitbrat-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=

# --- OpenAI (Required for llm-bot) ---
# Use "sk-local-dev-stub" if you don't have a real key for local testing.
OPENAI_API_KEY=sk-local-dev-stub

# --- MCP (Model Context Protocol) ---
# Shared secret for authenticating between scheduler and MCP servers
MCP_AUTH_TOKEN=local-dev-mcp-token

# --- Twitch Integration (Required for auth, ingress-egress, oauth-flow) ---
TWITCH_CLIENT_ID=local-twitch-id
TWITCH_CLIENT_SECRET=local-twitch-secret
OAUTH_STATE_SECRET=local-state-secret

# --- Discord Integration (Optional) ---
DISCORD_BOT_TOKEN=local-discord-token

# --- Twilio Integration (Optional) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_API_KEY=
TWILIO_API_SECRET=
TWILIO_CHAT_SERVICE_SID=
