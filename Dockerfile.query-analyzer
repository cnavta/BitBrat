# syntax=docker/dockerfile:1

FROM node:24-bookworm AS builder
WORKDIR /workspace
COPY package*.json ./
RUN npm ci
COPY tsconfig.json ./
COPY src ./src
RUN npm run build

FROM node:24-bookworm AS runner
WORKDIR /workspace
ENV NODE_ENV=production
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*
COPY package*.json ./
RUN npm ci --omit=dev
# Copy compiled app and architecture.yaml for runtime config lookups
COPY --from=builder /workspace/dist ./dist
COPY architecture.yaml ./architecture.yaml
EXPOSE 3000
ENV SERVICE_NAME=query-analyzer
ENV SERVICE_PORT=3000
ENV LLM_PROVIDER=ollama
ENV LLM_MODEL=llama3
ENV OLLAMA_HOST=http://localhost:11434
CMD ["node", "dist/apps/query-analyzer.js"]
